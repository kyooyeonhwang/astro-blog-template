---
// Layout Import
import MainLayout from '../../layouts/MainLayout.astro'
// Component Imports
import PostList from '../../components/PostList.astro'

import list from '../../../public/js/i18n.js';
// console.log(list)
const list2 = list;

// const url = window.location.href;

// console.log(url);

const lang = 'en';
// Data Fetching: fetch recent posts
let allPosts = Astro.fetchContent('../../posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
const recentPosts = allPosts.slice(0, 3)

---
<MainLayout 
  title="Home11" 
  description={`Hey! This is Astromnl a simple Astro blog template.`}>
    <h1 class="font-size-3">{list2.company03[lang]}</h1>
    <p class="lead-paragraph">Justo nec ultrices dui sapien eget mi proin sed</p>
    
    <p>{list2.company01[lang]}</p>
    <p>{list2.company02[lang]}</p>
    <p><img src="../../../public/images/i18n_${lang}.png"></p>
    <PostList posts={recentPosts} />
</MainLayout>
